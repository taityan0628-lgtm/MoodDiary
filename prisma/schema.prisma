generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String      @id @default(cuid())
  name      String
  email     String      @unique
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  entries   DiaryEntry[]
}

model Mood {
  id        String      @id @default(cuid())
  name      String      @unique // "幸せ", "穏やか" など
  color     String      // "#FFD700"
  icon      String      // "Heart", "Sun"
  order     Int         @default(0)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  entries   DiaryEntry[]

  @@index([order])
}

model DiaryEntry {
  id        String   @id @default(cuid())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String

  title     String
  content   String   @db.Text

  mood      Mood     @relation(fields: [moodId], references: [id])
  moodId    String

  date      DateTime @db.Date      // 日付のみ (YYYY-MM-DD)
  timestamp DateTime @default(now()) // 正確な記録時刻

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, date(sort: Desc)])        // ユーザーの日記を日付降順
  @@index([userId, timestamp(sort: Desc)])   // タイムライン用
  @@index([moodId])                          // 気分別統計用
  @@index([date])                            // カレンダービュー用
}
